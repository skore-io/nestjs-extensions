{
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "https://npm.pkg.github.com/",
      "npmClient": "npm"
    },
    "version": {
      "allowBranch": [
        "main"
      ],
      "changelogPreset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Features 🚀"
          },
          {
            "type": "feature",
            "section": "Features 🚀"
          },
          {
            "type": "fix",
            "section": "Bug Fixes 🐛"
          },
          {
            "type": "perf",
            "section": "Performance Improvements 🐳"
          },
          {
            "type": "revert",
            "section": "Reverts 💩"
          },
          {
            "type": "docs",
            "section": "Documentation 📝"
          },
          {
            "type": "style",
            "section": "Styles 💅🏻"
          },
          {
            "type": "chore",
            "section": "Miscellaneous Chores 🧰"
          },
          {
            "type": "refactor",
            "section": "Code Refactoring 🎨"
          },
          {
            "type": "test",
            "section": "Tests 🧪"
          },
          {
            "type": "build",
            "section": "Build System 🛠"
          },
          {
            "type": "ci",
            "section": "Continuous Integration 🤖"
          }
        ]
      },
      "conventionalCommits": true,
      "createRelease": "github",
      "message": "chore(release): %s"
    }
  },
  "packages": [
    "packages/*"
  ],
  "includeMergedTags": true,
  "version": "0.0.0"
}
